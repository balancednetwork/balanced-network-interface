{
  "name": "@balancednetwork/sdk-core",
  "license": "MIT",
  "version": "1.0.4",
  "description": "⚒️ An SDK for building applications on top of BalancedNetwork V1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "files": ["dist", "src"],
  "repository": "https://github.com/balancednetwork/sdk-core.git",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "tsup test",
    "prepublishOnly": "tsup build",
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf .turbo",
    "pretty": "biome format . --write",
    "checkTs": "tsc --noEmit"
  },
  "dependencies": {
    "@ethersproject/address": "^5.0.2",
    "big.js": "6.1.1",
    "decimal.js-light": "^2.5.0",
    "tiny-invariant": "^1.1.0",
    "toformat": "^2.0.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.10",
    "@swc/core": "^1.4.8",
    "@types/big.js": "^6.2.2",
    "tsup": "^8.0.2"
  },
  "engines": {
    "node": ">=10"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  }
}
